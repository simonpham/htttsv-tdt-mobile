<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:background="@color/white">

    <com.balysv.materialripple.MaterialRippleLayout
        android:id="@+id/thongbao_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mrl_rippleOverlay="true"
        app:mrl_rippleColor="@color/materialRipple">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/monhoc_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:text="LÆ°u Kim Chung" />
            </LinearLayout>

            <include layout="@layout/line_space" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/diem1_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:padding="4dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="24dp"
                    android:text="1" />

                <include layout="@layout/line_horizontal" />

                <TextView
                    android:id="@+id/diem2_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:padding="4dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="24dp"
                    android:text="1" />

                <include layout="@layout/line_horizontal" />

                <TextView
                    android:id="@+id/diemthi1_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:padding="4dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="24dp"
                    android:text="1" />

                <include layout="@layout/line_horizontal" />

                <TextView
                    android:id="@+id/diemthi2_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:padding="4dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="24dp"
                    android:text="1" />

                <include layout="@layout/line_horizontal" />

                <TextView
                    android:id="@+id/dtb_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:padding="4dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="24dp"
                    android:text="1" />
            </LinearLayout>

            <TextView
                android:id="@+id/ghichu_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:textStyle="italic|bold"
                android:textSize="15dp"
                android:text="" />
        </LinearLayout>
    </com.balysv.materialripple.MaterialRippleLayout>
</LinearLayout>
