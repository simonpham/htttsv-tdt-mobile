<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:orientation="vertical"
    android:background="@color/white">

    <com.balysv.materialripple.MaterialRippleLayout
        android:id="@+id/thongbao_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mrl_rippleOverlay="true"
        app:mrl_rippleColor="@color/materialRipple">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/monhoc_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:textSize="17dp"
                            android:textStyle="bold"
                            android:text="LÆ°u Kim Chung" />
                    </LinearLayout>
                </LinearLayout>

                <include layout="@layout/line_space" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/stt_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2.7"
                        android:padding="4dp"
                        android:gravity="center"
                        android:textSize="17dp"
                        android:textStyle="bold"
                        android:textColor="@color/colorAccent"
                        android:text="1" />

                    <include layout="@layout/line_horizontal" />

                    <TextView
                        android:id="@+id/mamon_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:padding="4dp"
                        android:gravity="center"
                        android:textSize="17dp"
                        android:text="001001" />

                    <include layout="@layout/line_horizontal" />

                    <TextView
                        android:id="@+id/tc_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2.65"
                        android:padding="4dp"
                        android:gravity="center"
                        android:textStyle="italic"
                        android:textSize="17dp"
                        android:text="4" />

                    <include layout="@layout/line_horizontal" />

                    <TextView
                        android:id="@+id/dtb_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2.65"
                        android:padding="4dp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="24dp"
                        android:text="10" />
                </LinearLayout>

                <include layout="@layout/line_space" />
            </LinearLayout>
        </LinearLayout>
    </com.balysv.materialripple.MaterialRippleLayout>
</LinearLayout>
